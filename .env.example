# Separ Local Development Environment
# Copy this file to .env and fill in values
# NEVER commit .env to git!

# PostgreSQL (used by Separ and SpiceDB)
POSTGRES_USER=separ
POSTGRES_PASSWORD=separ_local_dev
POSTGRES_DB=separ

# SpiceDB
SPICEDB_PRESHARED_KEY=separ-local-dev-key

# JWT
JWT_SECRET=local-dev-secret-change-in-production-must-be-32-chars

# JWT Issuer
JWT_ISSUER=separ

# Logging
RUST_LOG=info,separ=debug
